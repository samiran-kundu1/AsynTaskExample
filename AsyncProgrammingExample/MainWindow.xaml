<Window
    x:Class="AsyncProgrammingExample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AsyncProgrammingExample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>


        <StackPanel>

            <!--  Sequential task  -->
            <Button
                Height="35"
                Margin="0,0,0,50"
                Click="Button_ClickLong"
                Content="Long Sequential Task Without async" />


            <Button
                x:Name="LongTaskButton"
                Height="35"
                Margin="0,0,0,50"
                Click="LongTaskButton_Click_Async"
                Content="Long Sequential Task With async" />


            <Button
                Height="35"
                Margin="0,0,0,10"
                Click="ShortTaskButton_Click"
                Content="Short Task" />


            <TextBlock x:Name="LongTaskTextBlock" Margin="0,30,0,10" />

            <TextBlock x:Name="ShortTaskTextBlock" Margin="0,10,0,10" />

        </StackPanel>


    </Grid>
</Window>
